@model testing.Models.AuthorisedUser

@{
    ViewData["Title"] = "AuthorisedUsersRegister";
}

<h1>AuthorisedUsersRegister</h1>

<h4>AuthorisedUser</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AuthorisedUsersRegister">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         
            <div class="form-group">
                <label asp-for="UserNames" class="control-label">User Name</label>
                <input asp-for="UserNames" class="form-control" />
                <span asp-validation-for="UserNames" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserPassword" class="control-label">User Password</label>
                <input asp-for="UserPassword" class="form-control" type="password" />
                <span asp-validation-for="UserPassword" class="text-danger"></span>
            </div>
      <div class="form-group">
                <input type="submit" value="Add User" class="btn w-50" style="background-color:#bf20f0" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="text-white">Back to Login</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
