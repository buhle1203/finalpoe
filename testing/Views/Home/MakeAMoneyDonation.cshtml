@model testing.Models.DonationsOfMoney

@{
    ViewData["Title"] = "MakeAMoneyDonation";
}

<h1>MakeAMoneyDonation</h1>

<h4>DonationsOfMoney</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MakeAMoneyDonation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DonationId" class="control-label">Donation Id</label>
                <input asp-for="DonationId" disabled class="form-control" />
                <span asp-validation-for="DonationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DonatedDate" class="control-label">Donated Date</label>
                <input asp-for="DonatedDate" class="form-control" />
                <span asp-validation-for="DonatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DonationAmount" class="control-label">Donation Amount</label>
                <input asp-for="DonationAmount" class="form-control" />
                <span asp-validation-for="DonationAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DonationDonor" class="control-label">Donation Donor</label>
                <input asp-for="DonationDonor" class="form-control" id="donationdonor"/>
                <span asp-validation-for="DonationDonor" class="text-danger"></span>
                <div class="checkbox">
                    <label>@Html.CheckBox("Anonymous", false, new { @class = "form-check-input", onchange = "AnonymousUser(this)" })&nbsp; Remain Anonymous</label>
                </div>
                <script type="text/javascript">
                    function AnonymousUser(e) {
                        if (e.checked) {
                            document.getElementById("donationdonor").value = 'Remain Anonymous';
                        }
                        document.getElementById("donationdonor").disabled = e.checked;
                    }
                </script>
            </div>
          <div class="form-group">
                <input type="submit" value="Make Donation" class="btn w-50" style="background-color:#AA1AED" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="text-white">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
